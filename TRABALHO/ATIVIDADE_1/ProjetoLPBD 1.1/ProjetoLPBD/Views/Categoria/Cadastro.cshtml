@model CategoriaViewModel
@{
    ViewData["Title"] = "Cadastro de Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Categorias</h2>

<div div class="row">
    <form action="/Categoria/Salvar" method="post">
        <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

        <input asp-for="Id" type="hidden" />

        <label for="Descricao" class="control-label">Nome da Categoria</label>
        <input asp-for="Descricao" type="text" class="form-control"/>
        <span asp-validation-for="Descricao" class="text-danger"></span>
        <br />

        <input type="submit" value="Salvar Categoria" class="btn btn-success"/>
        <a asp-controller="Home" asp-action="Administradores" class="btn btn-default">Cancelar</a>
        <br />

        <span class="text-danger">@ViewBag.Erro</span>
    </form>
</div>

