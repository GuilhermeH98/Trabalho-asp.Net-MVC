@model JogoViewModel
@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Jogos</h2>

<form action="/Jogo/Salvar" enctype="multipart/form-data" method="post">
    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

    <input asp-for="Id" type="hidden" />

    <label for="Nome" class="control-label">Nome</label>
    <input asp-for="Nome" type="text" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
    <br />

    <label for="Preco" class="control-label">Preço</label>
    <input asp-for="Preco" class="form-control"/>
    <span asp-validation-for="Preco" class="text-danger"></span>
    <br />

    <label for="Descricao" class="control-label">Descrição</label>
    <input asp-for="Descricao" type="text" class="form-control"/>
    <span asp-validation-for="Descricao" class="text-danger"></span>
    <br />

    <label for="IdCategoria" class="control-label">Categoria</label>
    <select asp-for="IdCategoria" asp-items="@ViewBag.Categorias" class="form-control"></select>
    <span asp-validation-for="IdCategoria" class="text-danger"></span>
    <br />

    <label for="IdDesenvolvedora" class="control-label">Desenvolvedora</label>
    <select asp-for="IdDesenvolvedora" asp-items="@ViewBag.Desenvolvedoras" class="form-control"></select>
    <span asp-validation-for="IdDesenvolvedora" class="text-danger"></span>
    <br />

    <label for="IdPublicadora" class="control-label">Publicadora</label>
    <select asp-for="IdPublicadora" asp-items="@ViewBag.Publicadoras" class="form-control"></select>
    <span asp-validation-for="IdPublicadora" class="text-danger"></span>
    <br />

    <br />
    <img id="imgPreview" src="data:image/jpeg;base64,@Model.ImagemEmBase64" class="img-responsive" width="100">
    <input type="file" name="Imagem" id="Imagem" onchange="exibirImagem()" class="btn btn-default">
    
    <span asp-validation-for="Imagem" class="text-danger"></span>
    <br />

    <input type="submit" value="Salvar Jogo" class="btn btn-success"/>
    <a asp-controller="Home" asp-action="Administradores" class="btn btn-default">Cancelar</a>
    <br />

    <span class="text-danger">@ViewBag.Erro</span>
</form>

