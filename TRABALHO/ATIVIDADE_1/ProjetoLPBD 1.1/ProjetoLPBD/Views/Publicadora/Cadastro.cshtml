@model PublicadoraViewModel
@{
    ViewData["Title"] = "Cadastro de Publicadoras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Publicadoras</h2>

<form action="/Publicadora/Salvar" method="post">
    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

    <input asp-for="Id" type="hidden" />

    <label for="Nome" class="control-label">Nome da Publicadora</label>
    <input asp-for="Nome" type="text" class="form-control"/>
    <span asp-validation-for="Nome" class="text-danger"></span>
    <br />

    <input type="submit" value="Criar Publicadora" class="btn btn-success"/>
    <a asp-controller="Home" asp-action="Administradores" class="btn btn-default">Cancelar</a>
    <br />

    <span class="text-danger">@ViewBag.Erro</span>
</form>

